    "@sharingbox/eslint-config": "2.0.28",
    "@types/chai": "4.2.22",
    "@types/chai-as-promised": "7.1.4",
    "@types/emscripten": "1.39.6",
    "@types/fabric": "4.5.7",
    "@types/jsdom": "16.2.14",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "babel-loader": "8.2.3",
    "chai": "4.3.4",
    "chai-as-promised": "7.1.1",
    "copy-webpack-plugin": "10.2.4",
